<div class="container-fluid select-result">
  <div class="row flex-column">
    <form action="" class="form alc-select">
      <h3>選擇預設飲品：</h3>
      <div class="container-scroll">
        <% @drinks.each do |drink| %>
          <input name="alcohol" type="radio" id="<%= drink.name %>" value="<%= drink.volume_alcohol %>">	
          <label class="option" for="<%= drink.name %>">
            <div class="img-container">
              <img src="https://fakeimg.pl/300x300/aaf">
            </div>
            <div class="name"><%= drink.name %></div>
            <div class="concentration"><%= drink.volume_alcohol %> %</div>
            <button class="btn-delete">X</button>
          </label>
        <% end %>              
      </div>
      <input id="next-step" type="button" value="下一步">
    </form>  


    
    <form id="time-unit" action="" class="form time-unit">
      <div class="container">
        <div class="row">
          <div class="wrap time-before">
            <label for="time-before">多久前開始：</label>
            <select name="time-before" id="">
              <option value="0">還沒開始</option>
              <option value="30">0 時 30 分 前</option>
              <option value="60">1 時 00 分 前</option>
              <option value="90">1 時 30 分 前</option>
              <option value="120">2 時 00 分 前</option>
              <option value="150">2 時 30 分 前</option>
              <option value="180">3 時 00 分 前</option>
            </select>
          </div>
          <div class="wrap time-after">
            <label for="time-after">多久後結束：</label>
            <select name="time-after" id="">
              <option value="0">馬上</option>
              <option value="30">0 時 30 分 後</option>
              <option value="60">1 時 00 分 後</option>
              <option value="90">1 時 30 分 後</option>
              <option value="120">2 時 00 分 後</option>
              <option value="150">2 時 30 分 後</option>
              <option value="180">3 時 00 分 後</option>
            </select>
          </div>
          <div class="wrap unit">
            <label for="unit">一杯的單位：</label>
            <select name="unit" id="unit">
              <optgroup label="啤酒常用">
                <option value="330">鋁罐（小）330ml</option>
                <option value="500">鋁罐（大）500ml</option>
                <option value="330">玻璃瓶（小）330ml</option>
                <option value="600">玻璃瓶（大）600ml</option>
              </optgroup>
              
              <optgroup label="葡萄酒常用">
                <option value="150">紅酒、白酒杯（2/3滿）150ml</option>
                <option value="150">香檳杯（3/4滿）	150ml</option>
              </optgroup>
                
              <optgroup label="烈酒常用">
                <option value="44.5">Shot	44.5ml</option>
                <option value="10">一口杯 10ml</option>
              </optgroup>
            </select>
          </div>
        </div>
      </div>

      
      <input id="next-result" type="button" value="估算結果">
    </form>  


    <!-- WiP; man-figure and its animation -->
    <div id="result" class="result">

      <div class="container-man-figure">
        <img id="man-figure" src="https://trello-attachments.s3.amazonaws.com/5cec9cb07fc7c78c37741624/5cf791c8a0191a5d394086e7/c03d8170c49e5daafeb52614b9175bbf/%E4%BA%BA%E5%9E%8B-%E7%99%BD%E8%83%8C%E6%99%AF.png" alt="">
        <img id="water-level" src="https://trello-attachments.s3.amazonaws.com/5cec9cb07fc7c78c37741624/5cf791c8a0191a5d394086e7/4f30119f2f1913848ad0ac6649a807ea/%E6%B0%B4%E7%8B%80%E6%85%8B%E7%B7%9A-%E9%AB%98%E7%95%99%E7%99%BD.png" alt="">
      </div>
      
      <div class="d-flex flex-column justify-content-between container-btn">
        <!-- Button trigger modal -->
        <button id="level5" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          「斷片」： 啤酒 6.2 杯
        </button>
        <button id="level4" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          噁心想吐： 啤酒 5.1 杯
        </button>
        <button id="level3" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          亢奮： 啤酒 3.4 杯
        </button>
        <button id="level2" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          心情愉悅： 啤酒 1.7 杯
        </button>
        <button id="level1" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
          （正常）： 啤酒 0.8 杯
        </button>
      </div>
    </div>
  </div>
</div>




<!-- Modal -->

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to '註冊', new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to '忘記密碼', new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to '沒有收到認證通知', new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= link_to omniauth_authorize_path(resource_name, 'google_oauth2'), id: "google_oauth2-login", class: "btn btn-index" do %>
    <i class="fa fa-google-plus"></i> continue with Google 
  <% end %>

  <%= link_to omniauth_authorize_path(resource_name, 'facebook'), id: "facebook-login", class: "btn btn-index" do %>
    <i class="fa fa-facebook"></i> continue with Facebook 
  <% end %>
<% end %> 

<h1 class="sign-up">註冊</h1>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
<div class="sign-up_form">
  <div class="fieldl">
    <%= f.label "信箱" %><br />
    <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control required' %>
    </div> 
  </div>

  <div class="field">
    <%= f.label "密碼" %>
    <div class="form-group">
    <% if @minimum_password_length %>
    <em>(註冊密碼長度至少 <%= @minimum_password_length %> 碼)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control required' %>
    </div>
  </div>

  <div class="field">
    <%= f.label "確認密碼" %><br />
    <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control required' %>
    </div>
  </div>

  <div class="field">
    <%= f.label "性別" %><em>（會影響估計）</em><br />
    <div class="wide required">
    <select name="user[gender]">
      <option value="">請選擇</option>
      <option value="1">女</option>
      <option value="0">男</option>
    </select>    
    </div>
  </div>

  <div class="field">
     <%= f.label "體重" %>（公斤）：<br />
     <div class="form-group">
     <input type="number" name="user[weight]" id="user_weight", class="form-control required" />
     </div>
  </div>  
         
</div>
  <div class="btn btn-index">
    <%= f.submit "送出" %>
  </div>
<% end %>

<% render "devise/shared/links" %>


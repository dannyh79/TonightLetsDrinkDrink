<h1 class="log-in">登入</h1>

<div class="step">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label '信箱' %><br />
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control required' %>
      </div> 
    </div>

    <div class="field">
      <%= f.label '密碼' %><br />
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control required' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit '登入', class: 'btn_1 rounded' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</step>